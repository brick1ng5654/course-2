{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CMake Build and Run",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/lab02.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "cmake build",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "logging": {
        "engineLogging": true
      }
    }
  ]
}

